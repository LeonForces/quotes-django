{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "outDir": "static/js",
    "rootDir": "static/ts",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["static/ts/**/*.ts"]
}